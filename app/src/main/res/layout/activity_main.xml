<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <TextView

        android:layout_width="110dp"
        android:layout_height="25dp"
        android:text="Welcome to"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="44dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:textAppearance="@style/welcome_to"
        android:gravity="top"
        />


    <ImageView
        android:layout_width="274dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="44dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/musafir_1"
        android:layout_marginTop="59dp"
        android:gravity="top"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="296dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="61dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="215dp"
        android:layout_height="296dp"
        app:lottie_rawRes="@raw/travel"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        />
    <TextView
        android:id="@+id/get_started"
        android:layout_width="101dp"
        android:layout_height="21dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="662dp"
        android:text="Get_Started"
        android:textAppearance="@style/get_started"
        android:gravity="top"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/expBtn"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="651dp"
        android:text="Get Started ->"
        android:fontFamily="@font/inter_bold"
        android:background="@drawable/frame_1"/>
</RelativeLayout>